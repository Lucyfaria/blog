<h1>Mitarbeiter</h1>

<table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Rolle</th>
        <th scope="col"></th>
      <tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        
        <tr>
                   
          <td><%= user.username %></td> 
          <% if user.superadmin?%>
          <td>Superadmin</td>
          <% elsif user.admin?%>
          <td>Chef</td>
          <% elsif user.employee?%>
          <td>Angestellter</td>
          <% elsif user.intern?%>
          <td>Praktikant</td>
          <% end %>
          <td><%= link_to 'Bearbeiten', root_path , class: "btn btn-outline-warning btn-sm" %>
          <td><%= link_to 'LÃ¶schen', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
           
        </tr>
       <% end %>
      
    </tbody>
  </table>

  <br/>

  <%= link_to 'Neuer Mitarbeiter', root_path, class:"btn btn-secondary" %>

